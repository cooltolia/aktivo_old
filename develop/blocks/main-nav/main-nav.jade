                            +e.SPAN.icon
                                include ../../../app/images/layout/logout.svg
        +e.UL.list
            each link in links
                +e.LI.item
                    +e.A.link(href="#{link.url}") #{link.text}
                    if (link.subnav)
                        +e.UL.submenu
                            each sublink in link.subnav
                                +e.LI.subitem
                                    +e.A.sublink(href="#{sublink.url}") #{sublink.text}
                        