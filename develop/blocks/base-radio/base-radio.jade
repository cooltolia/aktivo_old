mixin base-radio(id, name, value, label, checked, required)
    +b.base-radio
        if (checked)
            +e.INPUT.input(type='radio' id='#{id}' name='#{name}' value='#{value}' checked required='#{required}')
        else
            +e.INPUT.input(type='radio' id='#{id}' name='#{name}' value='#{value}' required='#{required}')
        +e.LABEL.label(for='#{id}')= label
        +e.errors
            +e.error-message Текст ошибки