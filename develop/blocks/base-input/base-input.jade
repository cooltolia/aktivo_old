mixin base-input(type, id, name, label, required)
    +b.base-input&attributes(attributes)
        +e.INPUT.input(type='#{type}' id='#{id}' name='#{name}' required='#{required}')&attributes(attributes)
        +e.LABEL.label(for='#{id}')= label
        +e.errors
            +e.error-message Текст ошибки


mixin base-input-autocomplete(type, id, name, label, required)
    +b.base-input.base-input-autocomplete&attributes(attributes)
        span
            block
            +e.INPUT.input(type='#{type}' id='#{id}' name='#{name}' required='#{required}')
        +e.LABEL.label(for='#{id}')= label
        +e.errors
            +e.error-message Текст ошибки

