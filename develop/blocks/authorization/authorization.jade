mixin authorization()
    +b.authorization
        if !loggedIn
            +e.A.login(href='#') Вход
        else
            +e.logged
                +e.BUTTON.toggle(title='admin@aktivo.ru') admin@aktivo.ru
                +e.UL.list
                    +e.LI.item
                        +e.A.link(href='/realty') Недвижимость
                            +e.SPAN.icon.--property
                                include ../../../app/images/layout/property.svg
                    +e.LI.item
                        +e.A.link(href='/account/questionary') Верификация
                            +e.SPAN.icon.--questionary
                                include ../../../app/images/layout/questionary.svg
                    +e.LI.item
                        +e.A.link(href='/account/monitoring') Мониторинг
                            +e.SPAN.icon.--monitoring
                                include ../../../app/images/layout/monitoring.svg
                    +e.LI.item
                        +e.A.link(href='/account/documents') Документы
                            +e.SPAN.icon.--documents
                                include ../../../app/images/layout/documents.svg
                    +e.LI.item
                        +e.A.link(href='/account/finances') Финансы
                            +e.SPAN.icon.--finances
                                include ../../../app/images/layout/finances.svg
                    +e.LI.item
                        +e.A.link(href='/account/settings') Настройки
                            +e.SPAN.icon.--settings
                                include ../../../app/images/layout/settings.svg
                    +e.LI.item
                        +e.A.link(href='/logout') Выход
                            +e.SPAN.icon
                                include ../../../app/images/layout/logout.svg
